{
    "compilerOptions": {
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "outDir": "./dist/",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "types": ["node", "jest"],
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["./**/*.ts*", "./**/*.json"],
    "exclude": ["node_modules"]
}
